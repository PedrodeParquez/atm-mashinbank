<Window x:Class="atm_mashinbank.Views.Message_Box.Custom_MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize" Height="190" Width="300" WindowStartupLocation="Manual" WindowStyle="None">
    
    <Grid Background="Black">
        <StackPanel Margin="1" Background="#E4C865">
            <TextBlock  Name="Title_TextBlock"        FontSize="25" Background="#C92F2F" Width="300" FontFamily="Arial" TextAlignment="Center" Height="37"/>
            <TextBlock  Name="FirstString_TextBlock"  FontSize="19" TextAlignment="Center" Margin="0,30,0,0"/>
            <TextBlock  Name="SecondString_TextBlock" FontSize="19" TextAlignment="Center"/>
            <Button     Content="OK"                  FontSize="25" Background="#C92F2F" Margin="50,25,50,0" Click="OK_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
